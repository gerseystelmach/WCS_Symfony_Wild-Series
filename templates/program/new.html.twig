{% extends "base.html.twig" %}

{% block body %}
	<main>
		<header>
			<h1 class="text-center py-5">Add a new Program:</h1>
		</header>
		<div class="container">
			{{ form_start(form) }}
			
			{{ form_errors(form) }}
			
			{{ form_row(form.title, {'attr': {'class': 'form-control'}})}}
			{{ form_row(form.summary, {'attr': {'class': 'form-control'}})}}
			{{ form_row(form.poster, {'attr': {'disabled': 'disabled', 'class': 'd-none'}})}}
            {{ form_row(form.posterFile, {'attr': {'class': 'form-control'}})}}
			{{ form_row(form.category, {'attr': {'class': 'form-control'}})}}
			{{ form_row(form.actors, {'attr': {'class': 'form-control'}})}}

			<input type='submit' value='Add Program' class="btn btn-success my-5">
			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
