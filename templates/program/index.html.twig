{% extends 'base.html.twig' %}

{% block title %}Wild Series | All Series{% endblock %}

{% block body %}

<div class="container">
    <h1 class="my-5">You can find in here all the series:</h1>
    {% for program in programs %}
        <div class="py-3">
             <a class="link-secondary" href="{{ path("program_show", { "program_id": program.id }) }}"><h2 class="fw-bold">{{ loop.index }} : {{ program.title }}</h2></a>
           <p><span class="fw-bold">Category:</span> {{ program.category.name }}</p>
            <p><span class="fw-bold">Summary:</span> {{ program.summary }}</p>
           
        </div>
    {% else %}
        No serie found :(
    {% endfor %}

    <a class="btn btn-dark m-auto" href="{{ path('app_index') }}">
        Return to home page
    </a>
</div>

{% endblock %}
