{% extends 'base.html.twig' %}

{% block title %}Wild Series | All Series{% endblock %}

{% block body %}
    <h1>You can find in here all the series:</h1>
    {% for program in programs %}
        <div class="py-3">
            <h2 class="fw-bold">{{ loop.index }} : {{ program.title }}</h2>
           <p><span class="fw-bold">Category:</span> {{ program.category.name }}</p>
            <p><span class="fw-bold">Summary:</span> {{ program.summary }}</p>
             <a href="{{ path("program_show", { id: program.id }) }}">See more of this serie</a>
        </div>
    {% else %}
        No serie found :(
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Return to home page
    </a>
{% endblock %}
